{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@contexts": ["./src/contexts"],
      "@contexts/*": ["./src/contexts/*"],
      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"],
      "@views": ["./src/views"],
      "@views/*": ["./src/views/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@stores": ["./src/stores"],
      "@stores/*": ["./src/stores/*"],
      "@types": ["./src/types"]
    }
  }
}
